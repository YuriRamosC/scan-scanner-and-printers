<html>
  <head>
    <meta charset="utf-8"/>
    <link rel="stylesheet" type="text/css" href="/estatico/css/lista.css">
  </head>
  <body>
    <header class="cabecalhoPrincipal">
      <div class="container">
        <div class="row align-items-center">
          <div class="cabecalhoPrincipal-navegacao col-8"/>
        </div>
      </div>
    </header>
    <main class="conteudoPrincipal">
      <div class="container">
        <h1>
          Impressoras
          <if(data.offline == "true")>Offline</if>
        </h1>
        <table id="livros" class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Empresa</th>
              <th>Fabricante</th>
              <th>Modelo</th>
              <th>Número de Série</th>
              <th>Ponto</th>
              <th>IP da Máquina</th>
              <th>Ultima Comunicação</th>
              <if(data.offline == "true")>
                <th>Status</th>
                <th>Observações</th>
              </if>
            </tr>
          </thead>
          <tbody>
            <tr class=`status_${impressora.scan_status}` id="impressora_${impressora.id}" for(impressora in data.impressoras)>
              <td>${impressora.customer_name}</td>
              <td>${impressora.manufacturer}</td>
              <td>${impressora.model}</td>
              <td>${impressora.serialNumber}</td>
              <td>${impressora.installationPoint}</td>
              <if(impressora.tipo_conexao == "usb")>
                <td>USB</td>
              </if>
              <else-if(impressora.tipo_conexao == "network")>
                <td>${impressora.ipAddress}</td>
              </else-if>
              <td>${impressora.lastCommunication}</td>
              <if(data.offline == "true")>
                <td>${impressora.scan_observation}</td>
              </if>
            </tr>
          </tbody>
        </table>
      </div>
    </main>
    <!---<script src="/estatico/js/remove-livro.js">
        </script> --->
  </body>
</html>
