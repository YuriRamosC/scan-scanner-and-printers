<html>
  <head>
    <meta charset="utf-8"/>
  </head>
  <body>
    <header class="cabecalhoPrincipal">
      <include-html("../menu.html")/>
      <script>
        $(function() {
          $(document).tooltip( {track:true});
        });
      </script>
      <link rel="stylesheet" type="text/css" href="/estatico/css/lista.css"/>
    </header>
    <main class="conteudoPrincipal">
      <div class="container">
        <h1>
          ${data.impressoras.length} 
          Impressoras
          <if(data.offline == "true")>Offline</if>
        </h1>
        <table id="impressoras" class="table table-striped table-hover table-responsive-lg">
          <thead class="thead-light">
            <tr>
              <th>ID_WAY</th>
              <th>Total Impresso</th>
              <th>Número de Série</th>
            </tr>
          </thead>
          <tbody>
            <tr id="impressora_${impressora.id}" for(impressora in data.impressoras)>
              <td>${impressora.id_way}</td>
              <td>${impressora.total}</td>
              <td>${impressora.serialNumber}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>
